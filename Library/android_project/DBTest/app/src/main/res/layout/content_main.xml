<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:paddingBottom="@dimen/activity_vertical_margin"
    android:paddingLeft="@dimen/activity_horizontal_margin"
    android:paddingRight="@dimen/activity_horizontal_margin"
    android:paddingTop="@dimen/activity_vertical_margin"
    app:layout_behavior="@string/appbar_scrolling_view_behavior"
    tools:context="com.example.cho.dbtest.MainActivity"
    tools:showIn="@layout/activity_main">

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Hello World!"
        android:id="@+id/ViewUserInfoId" />

    <EditText
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:id="@+id/EditUserInfoId"
        android:layout_below="@+id/ViewUserInfoId"
        android:layout_alignParentLeft="true"
        android:layout_alignParentStart="true"
        android:layout_marginTop="31dp" />

    <Button
        style="?android:attr/buttonStyleSmall"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="ADD"
        android:id="@+id/UserInfoAdd"
        android:layout_below="@+id/EditUserInfoId"
        android:layout_alignParentLeft="true"
        android:layout_alignParentStart="true"
        android:layout_marginTop="35dp"
        android:onClick="newUserInfo"/>

    <Button
        style="?android:attr/buttonStyleSmall"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="FIND"
        android:id="@+id/UserInfoFind"
        android:layout_alignBottom="@+id/UserInfoAdd"
        android:layout_centerHorizontal="true"
        android:onClick="lookupUserInfo"/>

    <Button
        style="?android:attr/buttonStyleSmall"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="DELETE"
        android:id="@+id/UserInfoDelete"
        android:layout_alignTop="@+id/UserInfoFind"
        android:layout_alignParentRight="true"
        android:layout_alignParentEnd="true"
        android:onClick="removeUserInfo"/>

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="New Text"
        android:id="@+id/ViewAppInfoName"
        android:layout_marginTop="43dp"
        android:layout_below="@+id/UserInfoAdd"
        android:layout_alignParentLeft="true"
        android:layout_alignParentStart="true" />

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="New Text"
        android:id="@+id/ViewAppInfoId"
        android:layout_alignTop="@+id/ViewAppInfoName"
        android:layout_centerHorizontal="true" />

    <EditText
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:id="@+id/EditAppInfoName"
        android:layout_marginTop="52dp"
        android:layout_below="@+id/ViewAppInfoName"
        android:layout_alignParentLeft="true"
        android:layout_alignParentStart="true"
        android:layout_alignRight="@+id/UserInfoAdd"
        android:layout_alignEnd="@+id/UserInfoAdd" />

    <EditText
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:id="@+id/EditAppInfoId"
        android:layout_alignBottom="@+id/EditAppInfoName"
        android:layout_alignLeft="@+id/ViewAppInfoId"
        android:layout_alignStart="@+id/ViewAppInfoId"
        android:layout_toLeftOf="@+id/UserInfoDelete"
        android:layout_toStartOf="@+id/UserInfoDelete" />

    <Button
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="ADD"
        android:id="@+id/AppInfoAdd"
        android:layout_below="@+id/EditAppInfoName"
        android:layout_alignParentLeft="true"
        android:layout_alignParentStart="true"
        android:onClick="newAppInfo"/>

    <Button
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="FIND"
        android:id="@+id/AppInfoFind"
        android:layout_alignBottom="@+id/AppInfoAdd"
        android:layout_alignLeft="@+id/UserInfoFind"
        android:layout_alignStart="@+id/UserInfoFind"
        android:onClick="lookupAppInfo"/>

    <Button
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="DELETE"
        android:id="@+id/AppInfoDelete"
        android:layout_alignTop="@+id/AppInfoFind"
        android:layout_alignParentRight="true"
        android:layout_alignParentEnd="true"
        android:onClick="removeAppInfo"/>

</RelativeLayout>
