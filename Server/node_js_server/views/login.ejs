<div class="navigation">
    <div class="container-fluid">
        <div class="left" id="menu-button" style="display: inline-block; width:20%;"><i
                    style="visibility: hidden">여백</i></div>
        <div style="display: inline-block;">
            <a href="/" class="main-logo">AndroidStoryBoard</a>
        </div>
        <div class="right" style="display: inline-block;">
            <a class="btn btn-info" href="/join">Join</a>
        </div>
    </div>
</div>

<div class="container">
    <div class="container-center">
        <h1>Login</h1>
        <div class="center-block" id="login">
            <form method="post" action="/login">
                <input type="text" class="form-control" name="user_id" placeholder="id"/>
                <input type="password" class="form-control" name="password" placeholder="password"/>
                <button type="submit" class="btn btn-info">Login</button>
            </form>
        </div>
        <div class="warring-message">
            <%if(locals.login_result){%>
            <%= login_result %>
            <%}%>
        </div>
    </div>
</div>

